                        </Canvas>
                        <Canvas Height="45">
                            <Label Content="Booking Contact :" Canvas.Left="8" Canvas.Top="8" FontSize="14"/>
                            <ComboBox Canvas.Left="160" Canvas.Top="8" Height="33" Name="cboFacAdmin" Width="225" FontSize="14" FontWeight="Medium"
                                  DisplayMemberPath="Name" SelectedValuePath="userID"/>
                        </Canvas>
                        <Canvas Height="45">
                            <Label Content="Tech Contact :" Canvas.Left="8" Canvas.Top="8" FontSize="14"/>
                            <TextBox x:Name="txtTechContact" TextWrapping="Wrap" Width="225" Height="30" FontSize="14" Margin="160,8,0,0"/>
