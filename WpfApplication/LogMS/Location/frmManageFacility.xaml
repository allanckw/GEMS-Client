                <Label Content="Venues" FontSize="14" FontWeight="Bold"/>
                <ListBox x:Name="lstVenue" Height="300" SelectionChanged="lstVenue_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5" Orientation="Vertical">
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock Text="{Binding FacilityID}" />

                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Location}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
