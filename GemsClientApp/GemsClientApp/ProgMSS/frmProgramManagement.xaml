<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="Gems.UIWPF.frmProgramManagement"
	x:Name="Window"
	Title="frmProgramManagement"
Width="750" Height="600" Background="{x:Null}" Loaded="Window_Loaded">
    <GroupBox Header="Programme Management" FontSize="21.333" Margin="0" d:LayoutOverrides="Width, Height">
		<StackPanel Orientation="Horizontal">
			<GroupBox Header="Programme Segments" FontSize="18.667" HorizontalAlignment="Left" Margin="0,0,10,8" Width="385">
				<ListView x:Name="lstProgram" SelectionChanged="lstProgram_SelectionChanged" FontSize="12" SelectionMode="Single">
					<ListView.View>
						<GridView>
							<GridViewColumn Width="70" Header="Start">
								<GridViewColumn.CellTemplate>
									<DataTemplate>
										<TextBlock Text="{Binding StartDateTime, StringFormat=t}" />
									</DataTemplate>
								</GridViewColumn.CellTemplate>
							</GridViewColumn>
							<GridViewColumn Width="70" Header="End">
								<GridViewColumn.CellTemplate>
									<DataTemplate>
										<TextBlock Text="{Binding EndDateTime, StringFormat=t}" />
									</DataTemplate>
								</GridViewColumn.CellTemplate>
							</GridViewColumn>
							<GridViewColumn Width="215" Header="Segment Name" DisplayMemberBinding="{Binding Name}" />
						</GridView>
					</ListView.View>
				</ListView>
			</GroupBox>
			<GroupBox Header="Segment Details" FontSize="18.667" Width="338" Margin="0,0,0,8">
				<StackPanel>
					<StackPanel Height="31.313" Orientation="Horizontal">
						<Label Content="Event Date:" Width="76.803" FontSize="13.333"/>
						<Label Content=""  Width="240" FontSize="13.333" x:Name="txtDate" />
					</StackPanel>
					<StackPanel Height="31.313" Orientation="Horizontal">
						<Label Content="Name:" Width="76.803" FontSize="13.333"/>
						<TextBox TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240" FontSize="12" x:Name="txtName" />
					</StackPanel>
					<StackPanel Orientation="Horizontal" Height="31.314">
						<Label Content="Start Time:" Width="76.803" FontSize="13.333"/>
						<ComboBox Width="50" Margin="0,0,10,0" Height="23" x:Name="cboStartHr" FontSize="12"/>
						<ComboBox Width="50" Height="23" x:Name="cboStartMin" FontSize="12"/>
					</StackPanel>
					<StackPanel Height="31.314" Orientation="Horizontal">
						<Label Content="End Time:" Width="76.803" FontSize="13.333"/>
						<ComboBox Width="50" Margin="0,0,10,0" Height="23" x:Name="cboEndHr" FontSize="12"/>
						<ComboBox Width="50" Height="23" x:Name="cboEndMin" FontSize="12"/>
					</StackPanel>
					<StackPanel Height="250">
						<Label Content="Description:" FontSize="13.333"/>
						<TextBox TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="208" FontSize="12" Margin="8,0" x:Name="txtDescription" />
					</StackPanel>
					<DockPanel LastChildFill="False" Height="25" HorizontalAlignment="Right">
						<Button x:Name="btnAdd" Content="Add" Width="75" FontSize="12" Margin="0,0,10,0" Click="btnSave_Click" />
						<Button Content="Delete" Width="75" FontSize="12" Margin="0,0,10,0" Click="btnDelete_Click"/>

						<Button Content="Cancel" Width="75" FontSize="12" Margin="0,0,10,0" Click="clearAll"/>
					</DockPanel>
				</StackPanel>
			</GroupBox>
		</StackPanel>
	</GroupBox>
</Page>