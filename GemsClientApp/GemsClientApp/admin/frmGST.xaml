<Window x:Class="Gems.UIWPF.frmGST"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GEMS Helper" Height="250" Width="350"    AllowsTransparency="True"  
        Loaded="Window_Loaded"
        WindowStyle="None" WindowState="Normal"    MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        ResizeMode="NoResize" Foreground="{x:Null}" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/GemsClientApp;component/Gems.png"/>
    </Window.Background>
    <Canvas Opacity="1.0">
		<Button Template="{StaticResource Close}" Canvas.Top="15" Canvas.Right="45" x:Name="btnClose" Click="btnClose_Click" />
        <Label Canvas.Left="25" Canvas.Top="120" Height="28" Name="label1" Width="113" Content="GST Value in %:"></Label>
        <TextBox Canvas.Left="120" Canvas.Top="122" Height="23" Name="txtGST" Width="200" />
        <Button Canvas.Left="245" Canvas.Top="161" Content="Save" Height="23" Name="btnConfirm" Width="75" BorderBrush="Black" BorderThickness="0" Click="btnConfirm_Click" IsDefault="True" />
        <Label Canvas.Left="85" Canvas.Top="64" Content="GEMS GST Settings" FontFamily="Stencil" FontSize="20" Height="29" Name="label4" Width="208" />
    </Canvas>
</Window>
