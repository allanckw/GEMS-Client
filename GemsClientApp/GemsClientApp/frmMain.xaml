<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	xmlns:tn="clr-namespace:WPFTaskbarNotifier;assembly=WPFTaskbarNotifier"
    x:Class="Gems.UIWPF.frmMain"	x:Name="Window" Activated="Window_Activated"
	Title="GEMS Event Management System" Closed="Window_Closed"  
    Loaded="Window_Loaded" MouseLeftButtonDown="Window_MouseLeftButtonDown"
	Width="1000" Height="700" ResizeMode="NoResize" Foreground="{x:Null}" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"  >
	<Window.Background>
		<ImageBrush ImageSource="/GemsClientApp;component/Gems.png"/>
	</Window.Background>

    <Canvas Opacity="1.0" Margin="0">
        <GroupBox Header="GEMS Events Management System" Height="83" VerticalAlignment="Top" Foreground="Black" FontFamily="Stencil" FontSize="21.333" Width="952" Canvas.Top="5" Canvas.Left="14">
            <Menu Margin="33.5,5,51.5,0" FontSize="13.333">
            	<Menu.Background>
            		<ImageBrush/>
            	</Menu.Background>
                <MenuItem Header="Administrative" FontSize="15" Margin="10,0,0,0" x:Name="mnuAdmin">
                    <MenuItem Header="View Users/Assign System Roles" Background="{x:Null}" Width="320" x:Name="mnuItemAssSR" Click="mnuItemAssSR_Click" />
                    <!--<MenuItem Header="View Users" Background="{x:Null}" Width="250" x:Name="mnuItemViewUsers" Click="mnuItemViewUsers_Click"/>-->
                    <MenuItem Header="Global Role Templates" Background="{x:Null}" Width="320" x:Name="mnuGlobalRoleTemplates" Click="mnuGlobalRoleTemplates_Click"/>
                </MenuItem>
                <MenuItem Header="Event" FontSize="15" x:Name="mnuEvent" >
                    <MenuItem Header="Manage Event" Background="{x:Null}" Width="250" x:Name="mnuItemManageEvent" Click="mnuItemManageEvent_Click"/>
                </MenuItem>
                <MenuItem Header="Overview" FontSize="15" Margin="10,0,0,0" x:Name="mnuOverview" Click="mnuOverview_Click">
                </MenuItem>
                <MenuItem Header="Programmes" FontSize="15" Margin="10,0,0,0" x:Name="mnuPrograms" Click="mnuProgram_Click">
                </MenuItem>
                <MenuItem Header="Facilities" FontSize="15" Margin="10,0,0,0" x:Name="mnuLocation">
                    <MenuItem Header="Manage Facility" Background="{x:Null}" Width="250" x:Name="mnuManageFac" Click="mnuManageFac_Click"/>
                    <MenuItem Header="Manage Facility Bookings" Background="{x:Null}" Width="250" x:Name="mnuManageFacBookings" Click="mnuManageFacBookings_Click" />
                    <MenuItem Header="Search &amp; Book" Background="{x:Null}" Width="240" x:Name="mnuSearchFac" Click="mnuSearchFac_Click"/>
                    <MenuItem Header="View Current Bookings" Background="{x:Null}" Width="240" x:Name="mnuViewBookings" Click="mnuViewBookings_Click"/>
                </MenuItem>
                <MenuItem Header="Manpower" FontSize="15" Margin="10,0,0,0" x:Name="mnuManpower">
                    <MenuItem Header="Roles" Background="{x:Null}" Width="240" x:Name="mnuRoles" Click="mnuRoles_Click"/>
                    <MenuItem Header="Role Templates" Background="{x:Null}" Width="240" x:Name="mnuRoleTemplates" Click="mnuRoleTemplates_Click"/>
                </MenuItem>
                <MenuItem Header="Items" FontSize="15" Margin="10,0,0,0" x:Name="mnuItems" >
                    <MenuItem Header="Manage Items" Background="{x:Null}" Width="240" x:Name="mnuManageItem" Click="mnuManageItem_Click"/>
                </MenuItem>

                <!-- v0.2 Tasks Allocation Sub System -->
                <MenuItem Header="Tasks" FontSize="15" Margin="10,0,0,0" x:Name="mnuTasks" >
                </MenuItem>
                <MenuItem Header="Guests" FontSize="15" Margin="10,0,0,0" x:Name="mnuGuests" Click="mnuGuests_Click">
                </MenuItem>
                <!-- v0.2 Participants Registrations Sub Systems (WEB EXT)-->
                <MenuItem Header="Publishing" FontSize="15" Margin="10,0,0,0" x:Name="mnuPublish" Click="mnuPublish_Click">
                </MenuItem>
                <!-- v0.2 Contact List Management Sub System-->
                <MenuItem Header="Contact List" FontSize="15" Margin="10,0,0,0" x:Name="mnuContactList" Click="mnuContactList_Click">
                </MenuItem>
                <MenuItem Header="Notifications" Margin="10,0,0,0" FontSize="15" x:Name="mnuNotify" Click="mnuNotify_Click">
                </MenuItem>
            </Menu>
        </GroupBox>
        <Button x:Name="btnClose" Canvas.Left="931" Canvas.Top="23" Height="0" Width="0" Click="btnExit_Click">
            <Button.Template>
                <ControlTemplate>
                    <Canvas>
                        <Rectangle Width="30" Height="30">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/GemsClientApp;component/Close.png"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Canvas>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <GroupBox Header="My Event List" Height="455" FontFamily="Stencil" Canvas.Left="19" Canvas.Top="194" Width="199" Foreground="Black" FontSize="18.667">
            <ListBox x:Name="lstEventList" Margin="1,1,1,1" FontFamily="Tahoma" FontSize="12" 
                     FontWeight="Normal" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="lstEventList_SelectionChanged" Height="436">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10" Orientation="Vertical">
                            <WrapPanel Orientation="Horizontal"  >
                                <TextBlock Text="Event: "  Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding Name}" TextWrapping="Wrap"  Foreground="DarkBlue"/>
                            </WrapPanel>
                            <WrapPanel Orientation="Horizontal" >
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="DarkBlue"/>
                            </WrapPanel>
                            <WrapPanel Orientation="Horizontal" >
                                <TextBlock Text="From "/>
                                <TextBlock Text="{Binding Path=StartDateTime, StringFormat=dd MMM yy HH:mm}"  TextWrapping="Wrap" />
                                <TextBlock Text=" to "/>
                                <TextBlock Text="{Binding Path=EndDateTime, StringFormat=HH:mm}" TextWrapping="Wrap"/>
                            </WrapPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <DatePicker Canvas.Left="74" Canvas.Top="106" Height="25" Name="dtpFrom" Width="144" />
        <DatePicker Canvas.Left="74" Canvas.Top="138" Height="25" Name="dtpTo" Width="144" />
        <Label Canvas.Left="31" Canvas.Top="106" Content="From:" Height="28" Name="label1" FontFamily="Verdana" />

        <Label Canvas.Left="44" Canvas.Top="138" Content="To:" Height="28" Name="label2" FontFamily="Verdana" />
        <Button Canvas.Left="143" Canvas.Top="165" Content="Get Events" Height="23" Name="btnGetEvents" Width="75" Click="btnGetEvents_Click" />
        <Frame x:Name="frame" Canvas.Left="232" Canvas.Top="94" Width="763" Height="560" NavigationUIVisibility="Hidden" />
    </Canvas>
</Window>